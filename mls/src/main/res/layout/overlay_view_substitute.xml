<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:layout_margin="16dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/substituteView_logoImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:background="@color/green" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/overlayViewBasic_playerOnNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="17" />

        <TextView
            android:id="@+id/substituteView_playerOnNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Player On" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/overlayViewBasic_playerOffNumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10" />

        <TextView
            android:id="@+id/substituteView_playerOffNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Player Off" />


    </LinearLayout>

</LinearLayout>